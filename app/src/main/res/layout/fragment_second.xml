<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firstfragment"
    android:padding="25dp"
    android:background="#2c475a"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conversie"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="#ddc192"
            android:background="@drawable/bgkotak"
            android:fontFamily="@font/poppins"
            android:backgroundTint="#721e1e"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="69dp"/>

    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="114dp"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/f_diskon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/material_motion_duration_long_1"
            android:background="@null"
            android:src="@drawable/ic_diskon" />

        <ImageButton
            android:id="@+id/f_dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/material_motion_duration_long_1"
            android:background="@null"
            android:src="@drawable/ic_dollar" />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/edtpindah"
        android:hint="-"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textAlignment="center"
        />
    <Button
        android:id="@+id/btnpindah"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/bgkotak"
        android:layout_gravity="center"
        android:backgroundTint="@color/black"
        android:text="Pass Value"
        />

</LinearLayout>